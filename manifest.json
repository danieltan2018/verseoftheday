{
  "name": "Verse of the Day",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Daily Bible verses and latest BPilgrims updates",
  "homepage_url": "https://bpilgrims.com",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "https://bpilgrims.com/"
  ],
  "content_security_policy": "script-src 'self' https://dailyverses.net/; object-src 'self'",
  "browser_action": {
    "default_icon": "icons/icon32.png",
    "default_title": "Welcome",
    "default_popup": "popup.html"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  }
}